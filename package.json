{
  "name": "centy-app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Centy - Local-first issue and documentation tracker web application",
  "scripts": {
    "dev": "next dev -p 5180",
    "build": "next build && rm -rf out/404.html out/404",
    "pages:dev": "pnpm build && wrangler pages dev out",
    "pages:deploy": "pnpm build && wrangler pages deploy out --project-name=centy-app",
    "start": "next start -p 5180",
    "proto": "buf generate",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "spell": "cspell lint '**/*.{ts,tsx,js,md,json}' --gitignore",
    "spell:check": "cspell lint '**/*.{ts,tsx,js,md,json}' --gitignore",
    "knip": "knip",
    "prepare": "husky"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.10.1",
    "@connectrpc/connect": "^2.1.1",
    "@connectrpc/connect-web": "^2.1.1",
    "@floating-ui/react": "^0.27.16",
    "@tanstack/react-table": "^8.21.3",
    "@tauri-apps/plugin-dialog": "^2.2.0",
    "@tiptap/extension-code-block-lowlight": "^3.12.1",
    "@tiptap/extension-link": "^3.12.1",
    "@tiptap/extension-placeholder": "^3.12.1",
    "@tiptap/pm": "^3.12.1",
    "@tiptap/react": "^3.12.1",
    "@tiptap/starter-kit": "^3.12.1",
    "downdoc": "^1.0.2-stable",
    "lowlight": "^3.3.0",
    "next": "^16.0.10",
    "next-themes": "^0.4.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sonner": "^2.0.7",
    "turndown": "^7.2.2"
  },
  "devDependencies": {
    "@bufbuild/buf": "^1.61.0",
    "@bufbuild/protoc-gen-es": "^2.10.1",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@cspell/dict-he": "^4.0.5",
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/turndown": "^5.0.6",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^3.2.4",
    "cspell": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "knip": "^5.66.2",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vitest": "^3.2.4",
    "wrangler": "^4.52.1"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.24.0"
}
